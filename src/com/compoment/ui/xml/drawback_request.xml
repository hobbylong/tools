<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EDF5D2"
        android:gravity=""
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#92A845"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="退款申请"
                android:textColor="#FFFFFF"
                android:textSize="20sp" >
            </TextView>

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/back" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/queryButton"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
              
                android:background="#DE9D5E"
                android:text="查询"
                android:textColor="#FFFFFF"
                android:textSize="14sp" >
            </Button>

            <EditText
                android:id="@+id/orderNumEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/queryButton"
                android:layout_alignBottom="@+id/queryButton"
                android:layout_toLeftOf="@+id/queryButton"
                  android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                android:background="#EAECE2"
                android:padding="5dp"
                android:ems="10"
                android:maxLength="40"
                android:singleLine="true"
                android:text="请输入订单号"
                android:textColor="#CCD5B0"
                android:textSize="16sp" >

            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
              android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/typeTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="退款类型"
                android:textColor="#CBD1BA"
                android:textSize="16sp" >
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/typeValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="退多收的"
                    android:textColor="#869162"
                    android:textSize="16sp" >
                </TextView>

                <ImageView
                    android:id="@+id/rightImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/right" >
                </ImageView>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
                android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/requestMoneyTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="申请金额"
                android:textColor="#909A70"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/requestMoneyValueEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:maxLength="40"
                android:singleLine="true"
                android:text="请输入申请金额"
                android:textColor="#C7CDB4"
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
                android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/userNameTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="客户姓名"
                android:textColor="#869162"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/userNameValueEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:maxLength="40"
                android:singleLine="true"
                android:text="请输入客户姓名"
                android:textColor="#C7CDB4"
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
                android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phoneTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="客户手机"
                android:textColor="#869162"
                android:textSize="16sp" >
            </TextView>

            <EditText
                android:id="@+id/phoneValueEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:maxLength="40"
                android:singleLine="true"
                android:text="请输入客户手机"
                android:textColor="#C7CDB4"
                android:textSize="16sp" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/whyTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="退款原因"
                android:textColor="#869162"
                android:textSize="16sp" >
            </TextView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/whyValueEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:maxLength="40"
                    android:singleLine="true"
                    android:text="请输入退款原因"
                    android:textColor="#CBD1BA"
                    android:textSize="16sp" >
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#EDF5D2"
              android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/requestButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="#92A845"
                android:text="申请"
                android:textColor="#ffffff"
                android:textSize="16sp" >
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>