<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     android:background="#EDF5D2"
    android:orientation="vertical" >
<RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#92A845"
        
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="帐号信息"
                android:textColor="#FFFFFF"
                android:textSize="20sp" >
            </TextView>

    

            <ImageView
                android:id="@+id/backImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/back" />

        </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="2dp"
         android:background="@drawable/corner_contentlinearlayout_nocorner"
        android:orientation="vertical" >

         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >
        <TextView
            android:id="@+id/noTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="       帐号:"
            android:textColor="#B3B5AB"
            android:textSize="16sp" >
        </TextView>

        <TextView
            android:id="@+id/noValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="9555**888"
            android:textColor="#282828"
            android:textSize="16sp" >
        </TextView>
        </LinearLayout>

         <View   android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                 android:background="#E5EAD3"
                />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="账户类型:"
                android:textColor="#B3B5AB"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/typeValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="押款帐户"
                android:textColor="#282828"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>

        
        <View   android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                 android:background="#E5EAD3"
                />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nameTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="    帐号名:"
                android:textColor="#B3B5AB"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/nameValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="张三"
                android:textColor="#282828"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>

        
        <View   android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                 android:background="#E5EAD3"
                />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/balanceTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="账户余额:"
                android:textColor="#B3B5AB"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/balanceValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="100元"
                android:textColor="#282828"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>
<View   android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                 android:background="#E5EAD3"
                />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/canUseBalanceTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="可用余额:"
                android:textColor="#B3B5AB"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/canUseBalanceValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="9000元"
                android:textColor="#282828"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>
<View   android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                 android:background="#E5EAD3"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/stopMoneyTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="止付金额:"
                android:textColor="#B3B5AB"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/stopMoneyValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="100元"
                android:textColor="#282828"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>
<View   android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                 android:background="#E5EAD3"
                />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/stateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="帐号状态:"
                android:textColor="#B3B5AB"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/stateValueTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="正常"
                android:textColor="#282828"
                android:textSize="16sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>