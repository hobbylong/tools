<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="48dip"
  android:orientation = "horizontal">
  		<CheckBox
  			android:id = "@+id/checkbox"
  		
  			android:layout_width = "wrap_content"
  			android:layout_height = "wrap_content"
  			android:layout_alignParentLeft = "true"
  			android:layout_centerVertical = "true"
  			android:layout_marginLeft="4dip"
  			android:focusable = "false"
  			android:checked = "false"/>
  		<ImageView
  			android:id = "@+id/imageitem"
  			android:layout_width = "24dip"
  			android:layout_height = "24dip"
  			android:layout_centerVertical = "true"
  			android:layout_marginLeft = "26dip"
  			/>
  		<RelativeLayout
			  android:layout_width = "180dip"
			  android:layout_height="wrap_content"
			  android:layout_toRightOf="@+id/imageitem"
			  android:layout_marginLeft="7dip"
			  android:layout_marginTop="12dip"
			  android:layout_marginBottom="12dip"
			  android:layout_centerVertical="true">
			  <TextView
		  			android:id = "@+id/text_filename"
		  			android:layout_alignParentLeft="true"
		  			android:layout_width = "wrap_content"
		  			android:layout_height = "wrap_content"
		  			android:singleLine="true"
		  			android:layout_centerHorizontal="true"
		  		
		  			android:textSize="14sp"/>
	  		 <TextView
		  			android:id = "@+id/text_time"
		  			android:layout_alignParentLeft="true"
		  			android:layout_width = "wrap_content"
		  			android:layout_height = "wrap_content"
		  			android:layout_below="@id/text_filename"
		  			android:textSize="12sp" 
		  		
		  			/>
	  		 <TextView
		  			android:id = "@+id/tv_filelength"
		  			android:layout_width = "wrap_content"
		  			android:layout_height = "wrap_content"
		  			android:layout_below="@id/text_filename"
		  			android:layout_toRightOf="@id/text_time"
		  			android:layout_marginLeft="10dip"
		  			android:textSize="12sp" 
		  		
		  			/>
		</RelativeLayout>
		
		
		<Button 
  			android:id = "@+id/button_item_delete"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_marginRight="6dip"
  			android:layout_alignParentRight="true"
  			android:layout_centerVertical = "true"
  		
  			android:focusable = "false"/>"
  		
  		
  		<Button 
  			android:id = "@+id/button_item_open"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_alignParentRight="true"
  			android:layout_marginRight="45dip"
  			android:layout_centerVertical = "true"
  		
  			android:focusable = "false"/>
  		
  		
</RelativeLayout>
