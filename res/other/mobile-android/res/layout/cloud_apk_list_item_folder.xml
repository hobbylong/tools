<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="60dip">
    	<CheckBox
  			android:id = "@+id/cb_folder"
  			
  			android:layout_width = "20dip"
  			android:layout_height = "34dip"
  			android:layout_alignParentLeft = "true"
  			android:layout_centerVertical = "true"
  			android:layout_marginLeft="5dip"
  			android:focusable = "false"
  			android:checked = "false"/>
  		<ImageView
  			android:id = "@+id/cb_folder1"
  			android:layout_width = "wrap_content"
  			android:layout_height = "wrap_content"
  			android:layout_toRightOf="@id/cb_folder"
  			android:layout_centerVertical = "true"
  			android:layout_marginLeft="2dip"
  			
  			android:focusable = "false"/>
  		<TextView
  			android:id = "@+id/tv_foldername"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:singleLine="true"
  			android:ellipsize="end"
  			android:layout_marginTop="19px"
  			android:layout_marginBottom="19px"
  			android:layout_centerVertical="true"
  			android:layout_toRightOf="@id/cb_folder1"
  			android:layout_marginLeft="2dip"
  			android:maxWidth="200dip"
  			android:textSize="20sp"
  			android:textColor="@android:color/black"/>
  		<TextView
  			android:id = "@+id/tv_fileNum"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_centerVertical="true"
  			android:layout_toRightOf="@id/tv_foldername"
  			android:textSize="15sp"
  			android:textColor="@android:color/darker_gray"/>
  			
  		<Button 
  			android:id = "@+id/btn_folderOperation"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:layout_marginRight="15dip"
  			android:layout_alignParentRight="true"
  			android:layout_centerVertical = "true"
  		
  			android:focusable = "false"/>"
</RelativeLayout>
