<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="317px" android:layout_height="167px">
	<LinearLayout 
		android:layout_width="317px" android:layout_height="wrap_content"
		android:orientation="vertical" android:background="@drawable/widget_bg"
		android:layout_alignParentTop="true">
		
	    
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:orientation="horizontal" android:id="@+id/layout1"
			android:layout_marginTop="1px">
			
		    
		   <LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:orientation="vertical"
			>

			<ImageView android:id="@+id/imgDocument"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_weight="1" android:src="@drawable/selector_widget_ducoment" />
			<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="文档"/>
			</LinearLayout>
			
		   
		    <LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:orientation="vertical"
			>
			<ImageView android:id="@+id/imgMedia" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:src="@drawable/selector_widget_play" />
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="多媒体"/>
			</LinearLayout>	
		   
		   
		    	   <LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:orientation="vertical"
			>
			<ImageView android:id="@+id/imgEmail" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:src="@drawable/selector_widget_fu" />
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="附件"/>
			</LinearLayout>	
		    
		    <LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:gravity="center"
			android:orientation="vertical"
			>
		    
			<ImageView android:id="@+id/imgApk" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:src="@drawable/selector_widget_soft" />
				<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="安装包"/>
			</LinearLayout>	
			
		   		     		  
			
			
		</LinearLayout>
		
	</LinearLayout>
</RelativeLayout>
