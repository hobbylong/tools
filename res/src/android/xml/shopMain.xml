<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
<DivLayout_Vertical  android:layout_width="fill_parent"  android:layout_height="fill_parent"    android:background="#ffffff"  android:orientation="vertical"  >
<DivLayout_Horizon  android:layout_width="fill_parent"  android:layout_height="wrap_content"    android:background="#ffffff"  android:orientation="horizontal"  >
<TextView   android:id="@+id/shopNameTextView" android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="广州信源大厦"   android:textSize="16sp" android:textColor="#000000"   android:gravity="center" >
</TextView>
</DivLayout_Horizon>
<DivLayout_Horizon  android:layout_width="fill_parent"  android:layout_height="wrap_content"    android:background="#ffffff"  android:orientation="horizontal"  >
<TextView   android:id="@+id/shopAddressTextView" android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="广州大道中100号"   android:textSize="16sp" android:textColor="#000000"   android:gravity="center" >
</TextView>
</DivLayout_Horizon>
<DivLayout_Horizon  android:layout_width="fill_parent"  android:layout_height="wrap_content"    android:background="#ffffff"  android:orientation="horizontal"  >
<DivLayout_Horizon  android:layout_width="wrap_content"  android:layout_height="wrap_content"    android:background="#ffffff"  android:orientation="horizontal"  >
<TextView   android:id="@+id/shopManagerTitleTextView" android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="大堂经理"   android:textSize="16sp" android:textColor="#000000"   android:gravity="center" >
</TextView>
<TextView   android:id="@+id/shopManagerValueTextView" android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="张三"   android:textSize="16sp" android:textColor="#000000"   android:gravity="center" >
</TextView>
</DivLayout_Horizon>
<DivLayout_Horizon  android:layout_width="wrap_content"  android:layout_height="wrap_content"    android:background="#ffffff"  android:orientation="horizontal"  >
<TextView   android:id="@+id/shopTelTitleTextView" android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="电话"   android:textSize="16sp" android:textColor="#FFFFFF"   android:gravity="center" >
</TextView>
<TextView   android:id="@+id/shopTelValueTextView" android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="12323"   android:textSize="16sp" android:textColor="#000000"   android:gravity="center" >
</TextView>
</DivLayout_Horizon>
</DivLayout_Horizon>
<DivLayout_Horizon  android:layout_width="fill_parent"  android:layout_height="wrap_content"    android:background="#ffffff"  android:orientation="horizontal"  >
<Button   android:id="@+id/updateShopButton" android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="维护网点信息"   android:textSize="16sp" android:textColor="#000000"   android:background="背景颜色"  >
</Button>
<Button   android:id="@+id/updateShopManagerButton" android:layout_width="wrap_content"  android:layout_height="wrap_content"  android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:text="维护个人信息"   android:textSize="16sp" android:textColor="#000000"   android:background="背景颜色"  >
</Button>
</DivLayout_Horizon>
</DivLayout_Vertical>
</LinearLayout>




